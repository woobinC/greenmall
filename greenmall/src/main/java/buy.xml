<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="buyns">
	<select id="selectMaxbNum" parameterType="string" resultType="integer">
		select max(b_num) from buy where m_Id=#{mId}
	</select>
	<insert id="insert" parameterType="buy">
		insert into buy values(order_seq.nextval, #{mId}, #{totalPrice},
			sysdate, '주문완료', #{bName}, #{bPostCode}, #{bAddr}, #{bAddrDe},
			#{bTel}, #{bRequest}, #{bCnt})
	</insert>
</mapper>